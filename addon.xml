<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.csfd.cz"
       name="ČSFD.cz"
        version="2.0b"
       provider-name="ld (http://ldevel.blogspot.com)">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.themoviedb.org" version="1.0.3"/>
    <import addon="metadata.common.movieposterdb.com" version="1.0.2"/>
    <import addon="metadata.common.imdb.com" version="1.0.4"/>
    <import addon="metadata.imdb.com" version="1.0.2"/>
    <import addon="metadata.common.impa.com" version="1.0.2"/>
    <import addon="metadata.common.hdtrailers.net" version="1.0.2"/>
  </requires>
  <extension point="xbmc.metadata.scraper.movies"
             language="cs"
             library="csfdcz_imdbthmb.xml"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">ČSFD Movie Scraper</summary>
    <summary lang="cs">ČSFD Stahovac</summary>
    <description lang="en">Download Movie information from www.csfd.cz (czech-slovak movie database) / combined with www.imdb.com</description>
    <description lang="cs">Stahuje informace o filmech z ČSFD.cz (kombinovaně s IMDB.com).
Název filmu, obsah a hodnocení jsou staženy z csfd.cz, ostatní informace (včetně náhledu) z imdb.com
</description>
    <platform>all</platform>
  </extension>
</addon>
